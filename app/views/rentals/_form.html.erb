<%= form_for(@rental) do |form| %>
<% if @rental.errors.any? %>
  <div id="error_explanation">
    <h2><%= @rental.errors.count %>件のエラーがあります。</h2>
    <ul>

    <% @rental.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="rental_property">
     <p><%= form.label :"物件名" %></p>
     <%= form.text_field :property_name %><br>

     <p><%= form.label :"賃料" %></p>
     <%= form.text_field :rent %>円 <br>

     <p><%= form.label :"住所" %></p>
     <%= form.text_field :adress %><br>

     <p><%= form.label :"築年数" %></p>
     <%= form.text_field :age  %>年<br>

     <p><%= form.label :"備考" %><p>
     <%= form.text_field :note %><br>

  <% x = 1 %>
  <%= form.fields_for :stations do |station| %>
    <h3> 最寄駅<%= x %></h3>
         <p><%= station.label :"路線名" %></p>
         <%= station.text_field :route_name %>

         <p><%= station.label :"駅名" %></p>
         <%= station.text_field :station %>

         <p><%= station.label :"徒歩分数" %></p>
         <%= station.text_field :walking_minute %>分<br>
         <% x +=1 %>
  <% end %>

  <div class="actions">
    <%= form.submit "登録する" %>
  </div>

<% end %>
