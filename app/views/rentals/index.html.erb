<h1>ブログ一覧</h1>

<table>
  <tr>
    <th>物件名</th>
    <th>賃料</th>
    <th>住所</th>
    <th>築年数</th>
    <th>備考</th>
  </tr>

<% @rentals.each do |rental| %>
  <tr>
    <td><%= rental.property_name %></td>
    <td><%= rental.rent %></td>
    <td><%= rental.adress %></td>
    <td><%= rental.age %></td>
    <td><%= rental.note %></td>

    <td><%= link_to '詳細', rental_path(rental.id) %></td>
    <td><%= link_to "編集", edit_rental_path(rental.id),data: { confirm: '本当に編集していいですか？' }  %></td>
    <td><%= link_to "削除", rental_path(rental.id),method: :delete,data: { confirm: '本当に削除していいですか？' }  %></td>
  </tr>
<% end %>
</table>

<p><%= link_to "物件を登録する", new_rental_path %></p>
